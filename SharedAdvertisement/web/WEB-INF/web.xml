<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                              http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
          version="3.1" >

    <servlet>
        <servlet-name>SharedAdvertisement</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.SharedAdvertisement</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SharedAdvertisement</servlet-name>
        <url-pattern>/SharedAdvertisement</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadVideoServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.UploadVideoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadVideoServlet</servlet-name>
        <url-pattern>/UploadVideoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyOrderServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.MyOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyOrderServlet</servlet-name>
        <url-pattern>/MyOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PushServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.push.PushServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PushServlet</servlet-name>
        <url-pattern>/PushServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetSelectedPlayTimeSegmentServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.GetSelectedPlayTimeSegmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSelectedPlayTimeSegmentServlet</servlet-name>
        <url-pattern>/GetSelectedPlayTimeSegmentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetBillBoardLocationInfoServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.GetBillBoardLocationInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetBillBoardLocationInfoServlet</servlet-name>
        <url-pattern>/GetBillBoardLocationInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetBillBoardDetailInfoServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.GetBillBoardDetailInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetBillBoardDetailInfoServlet</servlet-name>
        <url-pattern>/GetBillBoardDetailInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadMyOrderServlet</servlet-name>
        <servlet-class>com.wind.sharedadvertisement.UploadMyOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadMyOrderServlet</servlet-name>
        <url-pattern>/UploadMyOrderServlet</url-pattern>
    </servlet-mapping>
</web-app>
